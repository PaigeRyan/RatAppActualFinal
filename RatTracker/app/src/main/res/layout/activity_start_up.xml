<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="doperatz.rattracker.StartUpActivity">

    <Button
        android:id="@+id/ViewReportListButton"
        android:layout_width="152dp"
        android:layout_height="62dp"
        android:text="View a List of Rat Reports"
        android:onClick="onViewReportListPressed"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/AddReportButton"
        tools:layout_editor_absoluteY="60dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintVertical_bias="0.341" />

    <Button
        android:id="@+id/AddReportButton"
        android:layout_width="152dp"
        android:layout_height="62dp"
        android:text="Add a New Rat Report"
        android:onClick="onAddReportPressed"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/LogoutButton"
        app:layout_constraintVertical_bias="0.569" />

    <Button
        android:id="@+id/LogoutButton"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:text="Log Out"
        android:onClick="onLogoutPressed"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintVertical_bias="0.897" />
</android.support.constraint.ConstraintLayout>
