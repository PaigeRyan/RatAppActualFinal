<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="doperatz.rattracker.LoginActivity">

    <EditText
        android:id="@+id/EnterEmailBox"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="66dp"
        android:layout_marginRight="56dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="65dp"
        app:layout_constraintBottom_toTopOf="@+id/EnterPasswordBox"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/EnterPasswordBox"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:ems="10"
        android:password="true"
        android:inputType="text"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="178dp"
        android:layout_marginBottom="177dp"
        app:layout_constraintBottom_toTopOf="@+id/LoginScreenCancelButton"
        android:layout_marginRight="55dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/CheckLoginButton"
        android:layout_width="166dp"
        android:layout_height="68dp"
        android:text="Log me in!"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="167dp"
        android:onClick="onLoginPressed"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/LoginScreenCancelButton"
        android:layout_width="126dp"
        android:layout_height="55dp"
        android:text="Cancel"
        android:onClick="onCancelPressed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/CheckLoginButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="56dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:text="Enter password:"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/EnterPasswordBox"
        app:layout_constraintRight_toRightOf="@+id/CheckLoginButton"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/EnterEmailBox"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/EnterEmailBox" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:text="Enter username:"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/EnterEmailBox"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        android:layout_marginTop="40dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/EnterEmailBox"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
